@model AntSharesUI_Web_.Models.Account

@{
    ViewData["Title"] = "创建账户";
}

<form asp-action="Create" method="post" class="form-horizontal" autocomplete="off">
    <fieldset>
        <h2 class="page-header">创建账户</h2>
        <div class="form-group">
            <label class="col-sm-4 control-label">输入账户名称</label>
            <div class="col-sm-6">
                <input asp-for="Name" class="form-control" type="text" placeholder="如：个人账户">
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-md-push-4 col-sm-push-4">
                <button type="submit" class="btn btn-success">创建账户</button>
            </div>
        </div>
    </fieldset>
</form>

<div>
    <a asp-action="Index">返回账户列表</a>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
